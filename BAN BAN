#include <bits/stdc++.h>
using namespace std;
void solve(int n){
    int i=1,j=3*n;
    int move=n/2;
   if(n%2){
       move++;
       cout<<move<<endl;
       
   }else{
       cout<<move<<endl;
   }
    while(move>0){
        cout<<i<<" "<<j<<endl;
        i+=3;
        j-=3;
        move--;
     }
}
int main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        solve(n);
    }
}
