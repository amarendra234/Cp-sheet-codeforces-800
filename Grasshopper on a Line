#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n,k;
        cin>>n>>k;
        if(n%k){
             cout<<1<<endl;
            cout<<n<<endl;
        }else{
             int no_of_times=n/k;
             int val1=(no_of_times*k)-1;
             int val2=n%k;
             cout<<2<<endl;
             cout<<val1<<" "<<val2+1<<endl;
        }
    }
}
